using System;
using System.Collections.Generic;
using System.Text;

namespace RoyalGambit
{
    class RoyalGuard
    {
        private string name;

        public string Name
        {
            get
            {
                return this.name;
            }

            set
            { 
              this.name = value;
            }
        }


        public RoyalGuard(string name)
        {
            this.Name = name;
        }


        public void KingIsUnderAttack(object sender, EventArgs e)
        {
            Console.WriteLine($"RoyalGuard {this.Name} is defending!");
        }
    }
}
