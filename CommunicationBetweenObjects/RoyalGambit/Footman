using System;
using System.Collections.Generic;
using System.Text;

namespace RoyalGambit
{
    class Footman
    {
        private string name;
        public string Name
        {
            get
            {
                return this.name;
            }

            set
            {
                this.name = value;
            }
        }

        public Footman(string name)
        { this.Name = name; }

        public void KingIsUnderAttack(object sender, EventArgs e)
        {
            Console.WriteLine($"Footman {this.Name} is panicking!");
        }
    }
}
